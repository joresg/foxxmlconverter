<Window x:Class="ViewConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Left" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="2" x:Name="source_txt" AcceptsReturn="True" VerticalScrollBarVisibility="Visible">
           Source text. 
        </TextBox> 
        <TextBox Grid.Column="1" x:Name="converted_txt" AcceptsReturn="True" VerticalScrollBarVisibility="Visible">
           Converted text. 
        </TextBox> 
    </Grid>
</Window>
